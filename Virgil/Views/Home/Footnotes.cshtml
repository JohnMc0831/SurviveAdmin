@model Virgil.Models.Footnotes

@{
    ViewBag.Title = "Manage Footnotes";
}

<h2>Manage Footnotes</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.footnotes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.footnotes, new { @class = "form-control", rows = "30" })
                @Html.ValidationMessageFor(model => model.footnotes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
            <div class="col-md-offset-2 col-md-10" style="padding-top: 20px;">
                @Html.ActionLink("Back Home", "Index", null, new {@class = "btn btn-primary"})
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
