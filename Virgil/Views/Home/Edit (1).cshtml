                @Html.TextAreaFor(model => model.Body, new { @class = "form-control", rows = "35" })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group lingoGerman hidden">
