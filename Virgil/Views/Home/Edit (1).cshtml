                @Html.ValidationMessageFor(model => model.TitleSpanish, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group lingoEnglish">
            @Html.LabelFor(model => model.Summary, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.Summary, new { @class = "form-control fullWidth" })
                @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group lingoGerman hidden">
            @Html.LabelFor(model => model.SummaryGerman, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-10">
                @Html.TextBoxFor(model => model.SummaryGerman, new { @class = "form-control fullWidth"})
                @Html.ValidationMessageFor(model => model.SummaryGerman, "", new { @class = "text-danger" })
