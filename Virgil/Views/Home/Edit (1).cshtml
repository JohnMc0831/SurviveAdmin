@model Virgil.Models.Topic

@{
    ViewBag.Title = "Update Topic <strong>" + Model.Title + "</strong>"; 
}

<div class="row">
    <div class="col-lg-9">
        <h2>@Html.Raw(ViewBag.Title)</h2>
    </div>
    <div class="col-lg-3" style="text-align: right;margin-top: 10px;">
        @Html.DropDownList("Languages", (SelectList)ViewBag.Languages, new { @class = "form-control" })
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Topic Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group lingoEnglish">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control fullWidth" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group lingoGerman hidden">
            @Html.LabelFor(model => model.TitleGerman, htmlAttributes: new { @class = "control-label col-md-2" })
