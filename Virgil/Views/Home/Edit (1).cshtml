        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to Topics", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
